@model IEnumerable<PedidosUnidad.Models.RowRepoInsumos>

@{
    Layout = null;
}

<!DOCTYPE html>

<div id="ModalInsumoSurtido" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="DatosInsumo">
            <div class="modal-header">
                <div class="btn-clsin">Solicitado VS Surtido</div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        @*<i class="fa fa-circle b-cv"></i>
                        <i class="fa fa-circle b-ca"></i>*@
                        <i class="fa fa-circle b-cr"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body" style="min-height:200px;" id="mdl_body">
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item" style="height:40px; padding-left:2px;">
                            <div style="width: 67px; height: 28px; float: left; text-align: center; padding: 1px; border-radius: 3px; margin-top: -6px; font-weight: 600; padding-top: 2px; background:#E0F7FA; line-height:12px; font-size:12px;">
                                @item.mes_nombre <br />
                                @item.anio
                            </div>
                            <div style="width: 120px; height: 30px; float: left; text-align: left; padding: 3px; font-size: 11px; color:#6c7293; margin-top: -8px; padding-top: 3px;">
                                <div style="margin-top:5px;">
                                    <i class="fa fa-fw fa-calendar" style="font-size:11px;"></i>
                                    @item.clave
                                </div>
                            </div>
                            <div style="float:right; text-align:right; margin-top:-6px; width: 42px;">
                                <div style="font-size:14px; font-weight: 600; color:#555;">@item.surtido</div>
                                <div style="font-size:12px; color:#000000; margin-top:-4px;">SUR</div>
                            </div>
                            <div style="float:right; text-align:right; border-right:1px solid #ddd; margin-top:-6px;margin-right: 5px; padding-right: 6px;">
                                <div style="font-size:14px; font-weight: 600; color:#6c7293;">@item.solicitado</div>
                                <div style="font-size:12px; color:#6c7293; margin-top:-4px;">SOL</div>
                            </div>
                        </li>
                        }
                    </ul>

            </div>
        </div>
    </div>
</div>


