@using PedidosUnidad.Security
@{
    ViewBag.Title = "Home Page";
}
<link href="~/Content/css/homeIn.css" rel="stylesheet" />
<div class="container-fluid bck-home" style="padding:0px;">
    <div style="width:100%; height:100vh; background:rgba(0,0,0,0.3); text-align:center; padding-top:20%;">
        <h2 class="outline" style=" margin:0px;">Sistema de Pedido y Captura de Existencias</h2>

        @if (SessionPersister.CurrentUser.navegador == "Movil" && (SessionPersister.CurrentUser.id_rol == 1 || SessionPersister.CurrentUser.id_rol == 3))
    {
        <div class="row cm-fix-height" style="margin-left:0px; margin-right:0px; margin-top:12%;">
            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                <a onclick="showInvTipo('1');" href="#" class="panel panel-default thumbnail cm-thumbnail">
                    <div class="panel-body text-center" style="min-height: 208px;">
                        <span class="svg-48">
                            <img src="~/Content/img/sf/monitor.svg" alt="notepad">
                        </span>
                        <h4>Medicamento</h4> <small>Cuadro general de medicamento.</small>
                    </div>
                </a>
            </div>
            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                <a onclick="showInvTipo('2');" href="#" class="panel panel-default thumbnail cm-thumbnail">
                    <div class="panel-body text-center" style="min-height: 208px;">
                        <span class="svg-48">
                            <img src="~/Content/img/sf/layers.svg" alt="notepad">
                        </span>
                        <h4>Material</h4> <small>Cuadro general de material de curación.</small>
                    </div>
                </a>
            </div>
        </div>

}

        @if ((SessionPersister.CurrentUser.id_rol == 4 || SessionPersister.CurrentUser.id_rol == 4))
                {
                <div class="row cm-fix-height" style="margin-left:0px; margin-right:0px; margin-top:7%;">
                <div class="col-sm-2 col-md-3 col-lg-4"></div>
                <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <a href = "/Existencia/ExistenciaDiaGerente?tipo=1" class="panel panel-default thumbnail cm-thumbnail">
                        <div class="panel-body text-center" style="min-height: 208px;">
                            <span class="svg-48">
                                <img src = "~/Content/img/sf/monitor.svg" alt="notepad">
                            </span>
                            <h4>Medicamento</h4> <small>Cuadro general de medicamento.</small>
                        </div>
                    </a>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <a href = "/Existencia/ExistenciaDiaGerente?tipo=2" class="panel panel-default thumbnail cm-thumbnail">
                        <div class="panel-body text-center" style="min-height: 208px;">
                            <span class="svg-48">
                                <img src = "~/Content/img/sf/layers.svg" alt="notepad">
                            </span>
                            <h4>Material</h4> <small>Cuadro general de material de curación.</small>
                        </div>
                    </a>
                </div>
                <div class="col-sm-2 col-md-3 col-lg-4"></div>
            </div>

        }


    </div>

</div>

<div id="ModalSelectInv" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="text-align:center;">
        <h3 style="color:white; margin-top: 30%;">Selecciona una opció</h3>
        <a id="cuadro_btn" href="#" class="btn btn-block btn-info" data-switch-color="info">Sólo Cuadro Básico</a>
        <a id="all_btn" href="#" style="margin-top:10px;" class="btn btn-block btn-info" data-switch-color="info">Todas las Claves de Almacén con Existencia</a>
    </div>
</div>

@section scripts {
    @*<script src="~/Scripts/js/HomeIn.js"></script>*@
    <script type="text/javascript">

        $(document).ready(function () {

        });

        function showInvTipo(tipo) {
            document.getElementById("cuadro_btn").href="/Existencia/MonitorInsumos?tipo="+tipo; 
            document.getElementById("all_btn").href="/Existencia/MonitorTodosInsumos?tipo="+tipo; 
            $('#ModalSelectInv').modal('show');
        }
    </script>
}