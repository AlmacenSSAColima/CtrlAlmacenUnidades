    <script>

        window.onbeforeunload = function (event) {
            $("#loader_outx_d").fadeIn("slow");

        }

        function cambiarPass() {
            show_loading();
            $.ajax({
                type: "GET",
                url: "/Usuarios/ChangePassword",
                dataType: "HTML",
                success: function (data) {
                    $("#mdl_cambia_pass").html(data);
                    $('#mdl_cambia_pass').modal('show');
                    close_loading();

                },
                error: function () {
                    //Cerrar Procesando
                    close_loading();
                    //Mostrar mensaje de excepcion ajax
                    show_error('Ocurrio algo al momento de procesar.');
                }
            });
        }
    </script>

